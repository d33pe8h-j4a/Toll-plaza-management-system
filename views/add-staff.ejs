<%- include('partials/header'); -%>
    <div class="container">
        <div class="main-body">
            <div class="row gutters-sm mt-4 mb-5">
                <div class="col-lg-3 col-md-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                <img src="/images/blankDP.jpg" alt="Admin" class="rounded-circle" width="150">
                                <div class="mt-3">
                                    <h4>
                                        <%= admin.name %>
                                    </h4>
                                    <p class="text-muted font-size-sm">
                                        <%= admin.address.street + ", " + admin.address.city + ", " +
                                            admin.address.state %>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-9 col-md-8 profile-details">
                    <div class="card h-100">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th scope="col">Name</th>
                                            <th scope="col">Gender</th>
                                            <th scope="col">Date of Birth</th>
                                            <th scope="col">Email</th>
                                            <th scope="col">Phone</th>
                                            <th scope="col">Address</th>
                                            <th scope="col">Click below</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <form action="/add-staff" method="post">
                                            <% staffs.forEach(staff=> { %>
                                                <tr>
                                                    <td>
                                                        <%= staff.name %>
                                                    </td>
                                                    <td>
                                                        <%= staff.gender %>
                                                    </td>
                                                    <td>
                                                        <%= staff.dob %>
                                                    </td>
                                                    <td>
                                                        <%= staff.email %>
                                                    </td>
                                                    <td>
                                                        <%= staff.phone %>
                                                    </td>
                                                    <td>
                                                        <%= staff.address.street + ", " + staff.address.city + ", " +
                                                            staff.address.state %>
                                                    </td>
                                                    <td><button type="submit" class="button-29" name="staffID" role="button"
                                                        value="<%= staffs[0].username %>">Add Staff</button></td>
                                                </tr>
                                            <% }); %>
                                        </form>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>



                </div>
            </div>

        </div>
    </div>

    <%- include('partials/footer'); -%>