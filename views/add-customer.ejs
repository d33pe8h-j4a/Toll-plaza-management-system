<%- include('partials/header'); -%>
    <div class="container">
        <div class="main-body">
            <div class="row gutters-sm mt-4 mb-5">
                <div class="col-lg-3 col-md-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                <img src="/images/blankDP.jpg" alt="Admin" class="rounded-circle" width="150">
                                <div class="mt-3">
                                    <h4>
                                        <%= admin.name %>
                                    </h4>
                                    <p class="text-muted font-size-sm">
                                        <%= admin.address.street + ", " + admin.address.city + ", " +
                                            admin.address.state %>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-9 col-md-8 profile-details">
                    <form action="/profile_edit" method="post">
                        <div class="card h-100">
                            <div class="card-body">
                                
                            </div>
                        </div>
                    </form>



                </div>
            </div>

        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Gender</th>
                    <th scope="col">Date of Birth</th>
                    <th scope="col">Email</th>
                    <th scope="col">Phone</th>
                    <th scope="col">Address</th>
                    <th scope="col">Click below</th>
                </tr>
            </thead>
            <tbody>
                <% customers.forEach(customer=> { %>
                    <tr>
                        <td>
                            <%= customer.name %>
                        </td>
                        <td>
                            <%= customer.gender %>
                        </td>
                        <td>
                            <%= customer.dob %>
                        </td>
                        <td>
                            <%= customer.email %>
                        </td>
                        <td>
                            <%= customer.phone %>
                        </td>
                        <td>
                            <%= customer.address.street + ", " + customer.address.city + ", " +
                                customer.address.state %>
                        </td>
                        <td><button onclick="window.location.href= '#';" class="button-29"
                                role="button">Add customer</button></td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </div>
    <%- include('partials/footer'); -%>