<%- include('partials/header'); -%>
<div class="container">
    <div class="main-body">
    
          <!-- Breadcrumb -->
          <nav aria-label="breadcrumb" class="main-breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item"><a href="javascript:void(0)">User</a></li>
              <li class="breadcrumb-item active" aria-current="page">User Profile</li>
            </ol>
          </nav>
          <!-- /Breadcrumb -->
    
          <div class="row gutters-sm mt-4 mb-5">
            <div class="col-lg-3 col-md-4">
              <div class="card h-100">
                <div class="card-body">
                  <div class="d-flex flex-column align-items-center text-center">
                    <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
                    <div class="mt-3">
                      <h4><%= user.name %></h4>
                      <p class="text-muted font-size-sm"><%= user.address.street + ", " + user.address.city + ", " + user.address.state %></p>
                      <button class="btn btn-primary">Change Photo</button>
                      <button class="btn btn-outline-primary">Change Address</button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-lg-9 col-md-8">
              <div class="card h-100">
                <div class="card-body">
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Full Name</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <%= user.name %>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                        <div class="mb-0">Gender</div>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <%= user.gender %>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                        <div class="mb-0">Date Of Birth</div>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <%= user.dob %>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Email</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <%= user.email %>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Phone</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <%= user.phone %>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Address</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <%= user.address.street + ", " + user.address.city + ", " + user.address.state %>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Driving License ID</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <%= user.drivingLicense %>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-sm-12">
                      <form action="/profile_edit" method="post">
                        <button type="submit" class="btn btn-info" value="#" name="submit" style="color: black; text-decoration: double;">Edit</button>
                      </form>
                    </div>
                  </div>
                </div>
              </div>



            </div>
          </div>

        </div>
    </div>
    <%- include('partials/footer'); -%>